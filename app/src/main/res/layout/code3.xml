<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heavy"
        android:id="@+id/codeName"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The last option to take before moving to other lane is to.."
        android:id="@+id/que1"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_weight="0.04" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A - Switch on your indicator"
            android:id="@+id/rdb1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-  Check the blind spot"
            android:id="@+id/rdb2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C - Look in ther rear view mirror"
            android:id="@+id/rdb3"
            android:layout_weight="23.55" />
    </RadioGroup>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You may not overtake another Vehicle?"
                android:id="@+id/que2"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_weight="0.04" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A - If the view of the road ahead is restricted"
                android:id="@+id/rdb4" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B - On a one way road"
                android:id="@+id/rdb5" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C - Neight of the above"
                android:id="@+id/rdb6" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the most important rule in RSA?"
        android:id="@+id/que3"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_weight="0.04" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A - Always stop to help somebody whose vehicle broken down"
            android:id="@+id/rdb7" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B - Keep left as far as possible"
            android:id="@+id/rdb8" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C - Never exceed the speed limit"
            android:id="@+id/rdb9" />
    </RadioGroup>

    <Button
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:id="@+id/startbutton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />
</LinearLayout>